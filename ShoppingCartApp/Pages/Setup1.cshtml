@page
@model ShoppingCart.Pages.SetupModel
@{
}

<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-8 col-lg-9 col-md-11 col-12 text-center">
            <h3>Lets setup Cart Modern</h3>
            <p class="blue-text">
                Before we proceed, we need to collect your environment information.<br />
                Moreover, if you haven't you need to authorize the "Installer" app to access your SharePoint Online envronment.
            </p>
            <div class="card">
                <h5 class="text-center mb-4">Root Site</h5>
                <form class="form-card" onSubmit="event.preventDefault()">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex">
                            <label class="form-control-label px-1">We need your SharePoint Online root site URL here<span class="text-danger"> *</span></label>
                            <input required type="text" id="txtSiteUrl" name="txtSiteUrl" placeholder="" onBlur="validate(6)" />
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="form-group col-sm-6">
                            <button title='Grant admin consent to this Installer app' type="button" class="btn-block btn-secondary">Grant admin consent</button>
                        </div>
                        <div class="form-group col-sm-6">
                            <button type="submit" class="btn-block btn-primary" title='Click here to proceed'>Proceed</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Styles {
   <link href="~/css/pages/setup.css" rel="stylesheet" />
}
